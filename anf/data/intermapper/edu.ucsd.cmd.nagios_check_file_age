<header>
type = "cmd-line"
package = "edu.ucsd"
probe_name = "cmd.nagios_check_file_age"
human_name = "File Age"
display_name = "IGPP Custom/Nagios/File Age"
version = "1.1"
address_type = "IP"
</header>
<description>
This probe checks the age of a file of interest on a remote host via NRPE.

Filename - The file to be checked for age. Use a fully qualified path here.
Alarm    - In seconds as to how old the file should be to set an alarm status
Critical - In seconds as to how old the file should be to set a critical status
</description>
<parameters>
"Filename" = "/path/to/file/on/remote/host"
"Alarm" = "700"
"Critical" = "900"
</parameters>
<command-line>
path = "/usr/lib64/nagios/plugins"
cmd = "check_nrpe -H ${ADDRESS} -c check_file_age -a ${Alarm} ${Critical} "${Filename}""
</command-line>
<command-exit>
okay: ${EXIT_CODE} = 0
alarm: ${EXIT_CODE} = 1
critical: ${EXIT_CODE} = 2
unknown: ${EXIT_CODE} = 3
</command-exit>
<command-display>
</command-display>
