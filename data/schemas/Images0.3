Schema Images0.3
	Description ( "Prototype schema for image data" )
	Timedate lddate
	;

Attribute description
	String (64)
	Format ( "%-64s" )
	Null ( "-" )
	Description ( "description of image" )
	Detail {
		This field is the description of an image, as recorded in the image packet header.
	}
	;

Attribute dfile
	String (64)
	Format ( "%-64" )
	Description ( "data file" )
	Detail {
		This attribute is the file name of an externally referenced file.
	}
	;

Attribute dir
	String (64)
	Format ( "%-64s" )
	Null ( "-" )
	Description ( "directory" )
	Detail {
		This attribute is the directory part of a pathname.
	}
	;

Attribute format
	String (10)
	Format ( "%-10s" )
	Null ( "-" )
	Description ( "graphics format for image" )
	Detail {
		This is the graphics format (e.g. gif, jpg) of a stored image.
	}
	;

Attribute groupname
	String (100)
	Format ( "%-100s" )
	Null ( "-" )
	Description ( "image group name" )
	Detail {
		This field specifies a short description for a group of related images or image streams
	}
	;

Attribute imggroup
	String (30)
	Format ( "%-30s" )
	Null ( "-" )
	Description ( "image group" )
	Detail {
		This field specifies a short mnemonic for a group of related images or image streams
	}
	;

Attribute lddate
	Time (17)
	Format ( "%17.5f" )
	Null ( "-9999999.99999" )
	Units ( "seconds" )
	Description ( "time of last record modification" )
	Detail {
		The lddate field records the time at which a record is entered or modified
	}
	;

Attribute srcname
	String (64)
	Format ( "%-64s" )
	Null ( "-" )
	Description ( "source-name for image" )
	Detail {
		This field records the orb source-name under which an image was transported.
	}
	;

Attribute time
	Time (17)
	Format ( "%17.5f" )
	Null ( "-9999999.99999" )
	Units ( "seconds" )
	Description ( "timestamp of image" )
	Detail {
		The time field records the Unix epoch timestamp of a stored image
	}
	;

Relation affiliation
	Fields ( imggroup srcname lddate )
	Primary ( imggroup srcname )
	Description ( "image group affiliations " )
	Detail {
		This table specifies the srcnames of images or image-streams that belong to a given group of images
	}
	;

Relation groups
	Fields ( imggroup groupname lddate )
	Primary ( imggroup )
	Defines imggroup
	Description ( "image groups" )
	Detail {
		This table specifies the names of image groups or image-stream groups in a database of images.
	}
	;

Relation images
	Fields ( srcname time format description dir dfile lddate )
	Primary ( srcname time )
	Description ( "externally stored images" )
	Detail {
		The images table tracks files containing image data.
	}
	;

